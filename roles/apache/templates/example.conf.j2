<VirtualHost *>
        ServerAdmin {{ apache.webmaster }}
        ServerName {{ apache.server_name }}
        ServerAlias {{ apache.server_alias }}
        DocumentRoot /var/www/{{ apache.server_name|lower|replace('.', '_') }}/public

        <Directory /var/www/>
                Options Indexes FollowSymLinks MultiViews
                AllowOverride None
                Order allow,deny
                allow from all
        </Directory>

        ErrorLog /var/log/apache2/{{ apache.server_name|lower|replace('.', '_') }}_error.log
        CustomLog /var/log/apache2/{{ apache.server_name|lower|replace('.', '_') }}_access.log combined
        LogLevel warn
</VirtualHost>